{
  "$schema": "./golden-tests.schema.json",
  "version": "2.0",
  "mcp_name": "Malaysian Law MCP",
  "description": "Golden contract tests for the Malaysian Law MCP covering 589 consolidated Malaysian federal Acts from CommonLII (Acts up to 2006)",
  "tests": [
    {
      "id": "my-001",
      "category": "article_retrieval",
      "description": "Retrieve Section 3 of the Computer Crimes Act 1997 -- unauthorised access to computer material",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Computer Crimes Act 1997",
        "article": "3"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["computer", "offence", "function"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "my-002",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 of the Communications and Multimedia Act 1998 (Act 588)",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Communications and Multimedia Act 1998",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["licence", "licensee"],
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "my-003",
      "category": "article_retrieval",
      "description": "Retrieve Section 2 of the Evidence Act 1950 -- definitions including 'computer'",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Evidence Act 1950",
        "article": "3"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["computer", "means"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "my-004",
      "category": "article_retrieval",
      "description": "Retrieve Section 4 of the Anti-Money Laundering Act 2001 -- money laundering offence",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Anti-Money Laundering Act 2001",
        "article": "4"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["money", "laundering", "offence"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "my-005",
      "category": "article_retrieval",
      "description": "Retrieve Section 2 of the Employment Act 1955 -- interpretation/definitions",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Employment Act 1955",
        "article": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["means", "employer", "employee"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "my-006",
      "category": "search",
      "description": "Full-text search for 'computer' returns cybercrime-related provisions",
      "tool": "search_legislation",
      "input": {
        "query": "computer crimes unauthorised access"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["computer", "access"]
      }
    },
    {
      "id": "my-007",
      "category": "search",
      "description": "Full-text search for 'money laundering' returns AML provisions",
      "tool": "search_legislation",
      "input": {
        "query": "money laundering"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["money", "laundering"]
      }
    },
    {
      "id": "my-008",
      "category": "search",
      "description": "Full-text search for 'income tax' returns fiscal provisions",
      "tool": "search_legislation",
      "input": {
        "query": "income tax"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["income", "tax"]
      }
    },
    {
      "id": "my-009",
      "category": "citation_roundtrip",
      "description": "Citation for Computer Crimes Act Section 3 includes commonlii.org URL pattern",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Computer Crimes Act 1997",
        "article": "3"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "commonlii\\.org",
        "text_not_empty": true
      }
    },
    {
      "id": "my-010",
      "category": "citation_roundtrip",
      "description": "Citation for Evidence Act Section 3 includes official identifier",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Evidence Act 1950",
        "article": "3"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "my-011",
      "category": "negative_test",
      "description": "Non-existent Malaysian Act returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Fictional Space Tourism Act 9999",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "my-012",
      "category": "negative_test",
      "description": "Malformed section number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Computer Crimes Act 1997",
        "article": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
